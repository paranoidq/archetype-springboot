<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="30">

    <!-- 变量配置 -->
    <Properties>
        <!--日志目录-->
        <Property name="baseLogPath">logs/</Property>
        <!--daily日志名称-->
        <Property name="dailyLogFileName">daily</Property>
        <!--单文件日志名称-->
        <Property name="logFileName">daily</Property>
    </Properties>

    <!-- appender配置 -->
    <Appenders>

        <!--console控制台输出-->
        <Console name="APPENDER_CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!--daily滚动日志-->
        <RollingFile name="APPENDER_DAILY_ROLLING" fileName="${baseLogPath}/${dailyLogFileName}.log" filePattern="${baseLogPath}/${dailyLogFileName}-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <TimeBasedTriggeringPolicy interval="5"/>
　　　　　　　<SizeBasedTriggeringPolicy size="10 MB" />
        </RollingFile>

        <!--单一文件日志-->
        <File name="APPENDER_FILE" fileName="${logFileName}" bufferedIO="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>


    <!--配置日志目标package-->
    <Loggers>

        <!--# Root日志配置 start-->
        <Root level="error">
            <AppenderRef ref="APPENDER_CONSOLE" />
        </Root>
        <!--# Root日志配置 end-->


        <!--# 应用日志配置 start-->
        <!--## 应用全局配置-->
        <Logger name="me.webapp" level="info" additivity="false">
            <!--<AppenderRef ref="APPENDER_DAILY_ROLLING" />-->
            <AppenderRef ref="APPENDER_CONSOLE" />
　　　　 </Logger>
        <!--# 应用日志配置 end-->


        <!--# Spring日志配置 start-->
        <Logger name="org.springframework" level="error" additivity="false">
            <AppenderRef ref="APPENDER_CONSOLE" />
　　　　 </Logger>
        <!--# Spring日志配置 end-->


    </Loggers>
</Configuration>